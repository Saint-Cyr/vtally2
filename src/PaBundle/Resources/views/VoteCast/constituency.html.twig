{% extends "VtallyBundle::layout.html.twig" %}
{% block content %}
    <div id="title-breadcrumb-option-demo" class="page-title-breadcrumb">
        <div class="clearfix">
            <div class="panel-heading" style="font-weight: bold; font-size: 23px;">
                Parliamentary - Constituency:<span style="color: blue;"> {{ constituency.name }}</span>
            </div>
        </div>
    </div>
    <div class="page-content">
        <div class="col-lg-4">
            {% for candidate in candidates %}
                {% if candidate.order == 1 %}
                    <div class="panel">
                        <div class="panel-body" style="background-color: #5CB85C;">
                            <div class="profile">
                                <div style="margin-bottom: 15px;" class="row">
                                    <div class="col-xs-12 col-sm-8" style="color: black;"><h2 style="color: black;">{{ candidate.firstName }} {{ candidate.lastName }}</h2>
                                        <p><strong>Party: {% if candidate.isIndependentCandidate %}IC{% else %} <img src="{{ asset('upload/images/paParty/'~ candidate.paParty.image) }}" width="30px"/>{% endif %}</strong> </p>
                                        <p><strong>Vote cast: {{ candidate.totalVoteCast }}</strong></p>
                                        <p><strong>Profession: Lawyer</strong></p>
                                        <p><strong>Education: Lawyer Degree</strong></p>
                                        <p><strong>Phone: +233 268 568 006</strong></p>
                                        <!--<p><strong class="mrs">Status:</strong><span class="label label-yellow mrs">Pinding victory</span></p>-->
                                    </div>
                                    <div class="col-xs-12 col-sm-4 text-center">
                                        <figure>
                                            {% if candidate.isIndependentCandidate %}
                                                <img src="{{ asset('upload/images/parIndCandidate/'~candidate.image) }}" alt="" style="display: inline-block" class="img-responsive img-circle"/>
                                            {% else %}
                                                <img src="{{ asset('upload/images/parDepCandidate/'~candidate.image) }}" alt="" style="display: inline-block" class="img-responsive img-circle"/>
                                            {% endif %}
                                            <figcaption class="ratings">
                                                <p>
                                                    <a href="#"><span class="fa fa-star"></span></a>
                                                    <a href="#"><span class="fa fa-star"></span></a>
                                                    <a href="#"><span class="fa fa-star"></span></a>
                                                    <a href="#"><span class="fa fa-star"></span></a>
                                                    <!--<a href="#"><span class="fa fa-star-o"></span></a>-->
                                                </p>
                                            </figcaption>
                                        </figure>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
        <div class="col-lg-8">
            <div class="panel panel-light">
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>Rang</th>
                                <th>Candidate</th>
                                <th>Vote cast</th>
                                <th>Party</th>
                            </tr>
                            </thead>
                            <tbody>
                            
                            {% for object in candidates %}
                                <tr>
                                    {% if object.order == 2  %}
                                        <td style="color: {% if object.totalVoteCast == 0 %}black;{% else %}orange;{% endif %} font-weight: bold; font-size: 23px;">{{ object.order }}<sup>nd</sup></td>
                                        <td style="color: {% if object.totalVoteCast == 0 %}black;{% else %}orange;{% endif %} font-weight: bold; font-size: 23px;">
                                        <img src="{{ asset('upload/images/parDepCandidate/'~object.image) }}" width="50px"/> {{ object.firstName }}</td>
                                        <td style="color: {% if object.totalVoteCast == 0 %}black;{% else %}orange;{% endif %} font-weight: bold; font-size: 23px;">{{ object.totalVoteCast }}</td>
                                        <td style="color: {% if object.totalVoteCast == 0 %}black;{% else %}orange;{% endif %} font-weight: bold; font-size: 23px;">
                                            {% if object.isIndependentCandidate %}
                                                IC
                                            {% else %}
                                                <img src="{{ asset('upload/images/paParty/'~object.paParty.image) }}" width="50px"/>
                                            {% endif %}
                                        </td>
                                    {% elseif object.order == 3  %}
                                        <td style="color: {% if object.totalVoteCast == 0 %}black;{% else %}red;{% endif %} font-weight: bold; font-size: 23px;">{{ object.order }}<sup>rd</sup></td>
                                        <td style="color: {% if object.totalVoteCast == 0 %}black;{% else %}red;{% endif %} font-weight: bold; font-size: 23px;">
                                        <img src="{{ asset('upload/images/parDepCandidate/'~object.image) }}" width="50px"/> {{ object.firstName }}</td>
                                        <td style="color: {% if object.totalVoteCast == 0 %}black;{% else %}red;{% endif %} font-weight: bold; font-size: 23px;">{{ object.totalVoteCast }}</td>
                                        <td style="color: {% if object.totalVoteCast == 0 %}black;{% else %}red;{% endif %} font-weight: bold; font-size: 23px;">
                                            {% if object.isIndependentCandidate %}
                                                IC
                                            {% else %}
                                                <img src="{{ asset('upload/images/paParty/'~object.paParty.image) }}" width="50px"/>
                                            {% endif %}
                                        </td>
                                    {% elseif object.order > 3 %}
                                        <td style="color: black; font-weight: bold; font-size: 23px;">{{ object.order }}<sup>th</sup></td>
                                        <td style="color: black; font-weight: bold; font-size: 23px;">
                                        <img src="{{ asset('upload/images/parDepCandidate/'~object.image) }}" width="50px"/> {{ object.firstName }}</td>
                                        <td style="color: black; font-weight: bold; font-size: 23px;">{{ object.totalVoteCast }}</td>
                                        <td style="color: black; font-weight: bold; font-size: 23px;">
                                            {% if object.isIndependentCandidate %}
                                                IC
                                            {% else %}
                                                <img src="{{ asset('upload/images/paParty/'~object.paParty.image) }}" width="50px"/>
                                            {% endif %}
                                        </td>
                                    {% endif %}
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}