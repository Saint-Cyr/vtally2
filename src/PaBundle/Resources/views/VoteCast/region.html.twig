{% extends "VtallyBundle::layout.html.twig" %}

{% block content %}
    <div id="title-breadcrumb-option-demo" class="page-title-breadcrumb">
   
    <div class="clearfix"></div>
</div>
<div class="page-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-light">
                <div class="panel-heading" style="font-weight: bold; font-size: 23px;">Parliamentary - Region:
                    <span style="color: violet;"> {{ region.name }}</span></div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>Rang</th>
                                <th>Winner</th>
                                <th>Site(s)</th>
                                <th>Percentage (%) </th>
                            </tr>
                            </thead>
                            <tbody>
                                
                            {% for object in paVoteCasts.parties %}
                                <tr>
                                    {% if object.order == 1 %}
                                        <td style="color: {% if object.siteNumber == 0 %}black;{% else %}green;{% endif %} font-weight: bold; font-size: 23px;">{{ object.order }}<sup>st</sup></td>
                                        <td style="color: {% if object.siteNumber == 0 %}black;{% else %}green;{% endif %} font-weight: bold; font-size: 23px;">
                                        <img src="{{ asset('upload/images/prParty/'~object.image) }}" width="50px"/> {{ object.name }}</td>
                                        <td style="color: {% if object.siteNumber == 0 %}black;{% else %}green;{% endif %} font-weight: bold; font-size: 23px;">{{ object.siteNumber }}</td>
                                        <td style="color: {% if object.siteNumber == 0 %}black;{% else %}green;{% endif %} font-weight: bold; font-size: 23px;">--</td>
                                    {% elseif object.order == 2  %}
                                        <td style="color: {% if object.siteNumber == 0 %}black;{% else %}orange;{% endif %} font-weight: bold; font-size: 23px;">{{ object.order }}<sup>nd</sup></td>
                                        <td style="color: {% if object.siteNumber == 0 %}black;{% else %}orange;{% endif %} font-weight: bold; font-size: 23px;">
                                        <img src="{{ asset('upload/images/prParty/'~object.image) }}" width="50px"/> {{ object.name }}</td>
                                        <td style="color: {% if object.siteNumber == 0 %}black;{% else %}orange;{% endif %} font-weight: bold; font-size: 23px;">{{ object.siteNumber }}</td>
                                        <td style="color: {% if object.siteNumber == 0 %}black;{% else %}orange;{% endif %} font-weight: bold; font-size: 23px;">--</td>
                                    {% elseif object.order == 3  %}
                                        <td style="color: {% if object.siteNumber == 0 %}black;{% else %}red;{% endif %} font-weight: bold; font-size: 23px;">{{ object.order }}<sup>rd</sup></td>
                                        <td style="color: {% if object.siteNumber == 0 %}black;{% else %}red;{% endif %} font-weight: bold; font-size: 23px;">
                                        <img src="{{ asset('upload/images/prParty/'~object.image) }}" width="50px"/> {{ object.name }}</td>
                                        <td style="color: {% if object.siteNumber == 0 %}black;{% else %}red;{% endif %} font-weight: bold; font-size: 23px;">{{ object.siteNumber }}</td>
                                        <td style="color: {% if object.siteNumber == 0 %}black;{% else %}red;{% endif %} font-weight: bold; font-size: 23px;">--</td>
                                    {% else %}
                                        <td style="color: black; font-weight: bold; font-size: 23px;">{{ object.order }}<sup>th</sup></td>
                                        <td style="color: black; font-weight: bold; font-size: 23px;">
                                        <img src="{{ asset('upload/images/prParty/'~object.image) }}" width="50px"/> {{ object.name }}</td>
                                        <td style="color: black; font-weight: bold; font-size: 23px;">{{ object.siteNumber }}</td>
                                        <td style="color: black; font-weight: bold; font-size: 23px;">--</td>
                                    {% endif %}

                                </tr>
                            {% endfor %}
                            
                            </tbody>
                            
                            <br>
                            <tbody>
                                <tr>
                                        <td style="color: black; font-weight: bold; font-size: 23px;">-<sup></sup></td>
                                        <td style="color: black; font-weight: bold; font-size: 23px;">
                                        <img src="{{ asset('upload/images/paParty/') }}" width="50px"/> IC</td>
                                        <td style="color: black; font-weight: bold; font-size: 23px;">{{ paVoteCasts.IC }}</td>
                                        <td style="color: black; font-weight: bold; font-size: 23px;">--</td>

                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </div>

{% endblock %}