{% include 'VtallyBundle::head.html.twig' %}



{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}


<body id="signin-page">
    
<div class="page-form">
    
    <form action="{{ path("fos_user_security_check") }}" class="form" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        
        <div class="body-content">

            <div class="row mbm text-center">
                
              <img src="{{ asset('images/logo.png') }}" width="222px" />
            </div>
            <div class="form-group">
                <div class="input-icon right"><i class="fa fa-user"></i>
                <input type="text" placeholder="Username" name="_username" class="form-control" value="{{ last_username }}"></div>
            </div>
            <div class="form-group">
                <div class="input-icon right"><i class="fa fa-key"></i><input type="password" placeholder="Password" name="_password" class="form-control"></div>
            </div>
            <div class="form-group pull-left">
                <!--<div class="checkbox-list">
                    <label><input type="checkbox" id="remember_me" name="_remember_me" value="on">&nbsp;
                        {{ 'security.login.remember_me'|trans }}
                    </label>
                </div>-->
            </div>
            <div class="form-group pull-right">
                <button type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-success">Log In
                    &nbsp;<i class="fa fa-chevron-circle-right"></i></button>
            </div>
            <div class="clearfix"></div>
            <!--<div class="forget-password"><h4>Forgotten your Password?</h4>

                <p>no worries, click <a href='#' class='btn-forgot-pwd'>here</a> to reset your password.</p></div>-->
            <hr>
    </form>
</div>

</body>
{% endblock fos_user_content %}
