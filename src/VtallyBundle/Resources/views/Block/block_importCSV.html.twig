{% extends 'SonataBlockBundle:Block:block_base.html.twig' %}

{% block block %}
<table>
    <thead>
        <tr>
            <th colspan="3">CSV-Import</th>
        </tr>
    </thead>

    <tbody>
        <tr>
            <td></td>
            <td>
                <form action="{{ path('vtally_importCSV') }}" method="post" enctype="multipart/form-data" > 
                    <select size="1" name="fileType">
                        {% for oneCSV in allTypes %}
                            <option value="{{ oneCSV.id }}">{{ oneCSV.title }}</option>
                        {% endfor %}
                    </select><br/>
                       <br />
                        <input type="file" name="csvFile">
                        <button type="submit" class="btn btn"><i class="fa fa-upload"></i> Upload & Save</button>
                    
                 </form>
                 <br />
             </td>
        </tr>
    </tbody>
</table>
{% endblock %}